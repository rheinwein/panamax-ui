- content_for(:title, 'Template Details')
.template-images
  %h2 Template Images
  %ul
    - @template.images.each do |image|
      %li.template-image-detail
        .template-image-icon
          %img{src: image.icon}
        = image.source
        .template-image-external
          = link_to 'View on Docker Hub', image.docker_index_url, target: '_blank'
          = link_to 'Inspect on imagelayers.io', "#{@template.imagelayers_url}&lock=#{image.source}", class: 'imagelayers-link-with-text', target: '_blank'
- if @template.documentation
  %h2 Documentation

  #post-run-html
    = @template.documentation_to_html.html_safe
